- if(rPath != '/root/') { rPath += '/' }
h1 Files in #{path}

- if(backLink != '')
  a(href=backLink,class='back') goto parent directory

- for(var i = 0; i < files.length; ++i)
  - var file = files[i]
  - var cl   = file.isDir ? "dir" : "file"
  - var link = rPath + file.path
  div.line
    span.file-size #{file.hSize.size} #{file.hSize.unit}B
    a(href=link,class=cl) #{file.path}
